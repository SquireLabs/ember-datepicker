<div class="d-flex">
  <div class="w-50">
    <h6>Date from string</h6>
    {{date-picker
      date=date
      valueFormat="YYYY-MM-DD"
      numberOfMonths=3
    }}
  </div>
  <div class="w-50">
    <dl>
      <dt>Formatted date</dt>
      <dd>{{formattedDate}}</dd>
      <dt>Timestamp</dt>
      <dd>{{timestamp}}</dd>
    </dl>
  </div>
</div>

<hr/>

<div class="d-flex">
  <div class="w-50">
    <h6>Date from javascript date (Week starting monday)</h6>
    {{date-picker
      date=jsDate
      valueFormat="date"
      firstDay=1
      format="dd Do MMM 'YY'"
      yearRange="2013, 2015"
    }}
  </div>
  <div class="w-50">
    <dl>
      <dt>UTC String</dt>
      <dd>{{jsUTCString}}</dd>
    </dl>
  </div>
</div>
