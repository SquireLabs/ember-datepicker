<div style="float: left">
  <h6>Date from string</h6>
  {{date-picker date=date valueFormat='YYYY-MM-DD' numberOfMonths=3}}
</div>
<div style="float: right">
  <dl>
    <dt>Formatted date</dt><dd>{{formattedDate}}</dd>
    <dt>Timestamp</dt><dd>{{timestamp}}</dd>
  </dl>
</div>

<div style="clear: both"></div>
<hr/>

<div style="float: left">
  <h6>Date from javascript date (Week starting monday)</h6>
  {{date-picker date=jsDate valueFormat='date' firstDay=1
                format="dd Do MMM 'YY'" yearRange="2013,2015"
                dismissOnScroll=true}}
</div>
<div style="float: right">
  <dl>
    <dt>UTC String</dt><dd>{{jsUTCString}}</dd>
  </dl>
</div>

<div style="clear: both"></div>
<hr/>

<div style="height:500px;overflow:auto;border:1px solid #ccc">
  <div id="scrollContainer" style="height:1000px">
    <h6>Scroll Stickiness - {{checkedValue}}</h6>
    {{date-picker date=jsDate valueFormat='date' scrollContainer='#scrollContainer' hasNullFooter=true nullFooterCheckboxValue=checkedValue}}
  </div>
</div>
